<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="50dp"
        android:id="@+id/text0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/addbutton"
        android:layout_margin="16dp"
        android:padding="36dp"
        />

    <Button
        android:textSize="20dp"
        android:id="@+id/button1"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="7"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toStartOf="@id/button2"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button2"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="8"
        app:layout_constraintBottom_toTopOf="@+id/button5"
        app:layout_constraintEnd_toStartOf="@id/button3"
        app:layout_constraintStart_toEndOf="@id/button1"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="9"
        app:layout_constraintBottom_toTopOf="@+id/button6"
        app:layout_constraintEnd_toStartOf="@id/addbutton"
        app:layout_constraintStart_toEndOf="@id/button2"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:backgroundTint="#00ff00"
        android:id="@+id/addbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickSign"
        android:text="+"
        app:layout_constraintBottom_toTopOf="@id/subbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/button3"
        />

    <Button
        android:textSize="20dp"
        android:backgroundTint="#00ff00"
        android:id="@+id/subbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickSign"
        android:text="-"
        app:layout_constraintBottom_toTopOf="@id/divbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6" />

    <Button
        android:textSize="20dp"
        android:backgroundTint="#00ff00"
        android:id="@+id/divbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickSign"
        android:text="/"
        app:layout_constraintBottom_toTopOf="@id/mulbutton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button9" />

    <Button
        android:textSize="20dp"
        android:backgroundTint="#00ff00"
        android:id="@+id/mulbutton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickSign"
        android:text="*"
        app:layout_constraintBottom_toTopOf="@id/clear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/eqbutton" />


    <Button
        android:textSize="20dp"
        android:id="@+id/button4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="4"
        app:layout_constraintBottom_toTopOf="@+id/button7"
        app:layout_constraintEnd_toStartOf="@id/button5"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="5"
        app:layout_constraintBottom_toTopOf="@+id/button8"
        app:layout_constraintEnd_toStartOf="@id/button6"
        app:layout_constraintStart_toEndOf="@id/button4"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button6"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="6"
        app:layout_constraintBottom_toTopOf="@+id/button9"
        app:layout_constraintEnd_toStartOf="@id/subbutton"
        app:layout_constraintStart_toEndOf="@id/button5"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button7"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="1"
        app:layout_constraintBottom_toTopOf="@id/button"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button8"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="2"
        app:layout_constraintBottom_toTopOf="@id/button0"
        app:layout_constraintEnd_toStartOf="@id/button9"
        app:layout_constraintStart_toEndOf="@id/button7"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button9"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="3"
        app:layout_constraintBottom_toTopOf="@id/eqbutton"
        app:layout_constraintEnd_toStartOf="@id/divbutton"
        app:layout_constraintStart_toEndOf="@id/button8"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="."
        app:layout_constraintBottom_toTopOf="@id/clear"
        app:layout_constraintEnd_toStartOf="@id/button8"
        app:layout_constraintStart_toStartOf="parent"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:id="@+id/button0"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClicknumbers"
        android:text="0"
        app:layout_constraintBottom_toTopOf="@id/clear"
        app:layout_constraintEnd_toStartOf="@id/eqbutton"
        app:layout_constraintStart_toEndOf="@id/button"
        android:backgroundTint="#ff00ff"/>

    <Button
        android:textSize="20dp"
        android:backgroundTint="#00ff00"
        android:id="@+id/eqbutton"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:onClick="onClickResult"
        android:text="="
        app:layout_constraintBottom_toTopOf="@id/clear"
        app:layout_constraintEnd_toStartOf="@id/subbutton"
        app:layout_constraintStart_toEndOf="@id/button0" />
    <Button
        android:backgroundTint="#00ff00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/clear"
        android:text="C"
        android:textSize="30dp"
        android:onClick="onClickClear"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>